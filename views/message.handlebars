<div class="row w-100 message-screen gx-4">
    <div class="col-3 p-4">
        <nav>
            <p>SIDE BAR FOR ALL THE CONVERSATIONS</p>
        </nav>
    </div>
    <div class="col-9 message-screen vh-90 d-flex flex-column justify-content-between p-4">
        <div class="col-10 d-flex flex-column justify-content-end w-100">
            {{#each messages}}
                {{> message-details}}
            {{/each}}
        </div>
        <div class="col-1 message-screen w-100">
            <hr>
        </div>
        <div class="col-1 message-screen d-flex justify-content-end w-100">
            <form id="message-form" data-sender-id="{{senderID}}" data-recipient-id="{{recipientID}}">
                <input class="form-input w-90" id="message" type="text" id="email-edit">
                <button class="btn send-btn w-10" id="send" type="submit">Send</button>
            </form>
        </div>
    </div>
</div>

<script src="/js/message.js"></script>