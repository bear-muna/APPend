<div class="col-3 search search-profile-card d-flex justify-content-around align-items-center p-2 m-2">
    <div class="search-picture col-4 col-md-3 h-30 search">
        {{!-- Profile picture --}}
    </div>
    <div class="col-8 d-flex flex-column justify-content-center align-items-center ">
        <div>
            <div>
                <p class="search-profile-name">{{first_name}} {{last_name}}</p>
                <p>{{Profile.location}}</p>
            </div>
            <div>
                <p>BIO:</p>
                {{#if Profile.bio}}
                <p>{{Profile.bio}}</p>
                {{else}}
                <p>No bio</p>
                {{/if}}
            </div>
        </div>
        <div>
            {{#each Cuisines}}
                <p>{{name}}</p>
            {{/each}}
        </div>
    </div>
</div>