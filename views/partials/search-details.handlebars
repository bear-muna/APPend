<div class="col-4 search search-profile-card d-flex justify-content-between align-items-center p-2" data-profile-id="{{id}}">
    <div class="col-4 col-md-4">
        <div class="pic-wrapper">
            <img src={{Profile.picture}} class="dashboard-photo" alt="profile-pic">
        </div>
    </div>
    <div class="col-7 d-flex flex-column justify-content-center align-items-center">
        <div class="col-12 d-flex flex-column justify-content-around align-items-center">
            <div class="d-flex col-12 flex-column justify-content-around align-items-start">
                <p class="search-profile-name">{{first_name}}</p>
                <p>{{Profile.location}}</p>
                <a href="/profiles/{{id}}">View Profile</a>
            </div>
            <div class="d-flex col-12 flex-column justify-content-around align-items-start">
                <p>BIO:</p>
                {{#if Profile.bio}}
                <p>{{bio_cut Profile.bio}}...</p>
                {{else}}
                <p>No bio</p>
                {{/if}}
            </div>
        </div>
        <div class="col-5 d-flex justify-content-around align-items-start">
            {{#each Cuisines}}
                <p>{{name}}</p>
            {{/each}}
        </div>
    </div>
</div>

