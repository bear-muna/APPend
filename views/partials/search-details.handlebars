<div class="col profile-card d-flex justify-content-around align-items-center">
    <div class="user-picture col-12 col-md-3 h-30 search">
        {{!-- Profile picture --}}
    </div>
    <div class="d-flex flex-column justify-content-around align-items-center">
        <div>
            <div>
                <p class="profile-name">{{first_name}} {{last_name}}</p>
                <p>{{Profile.location}}</p>
            </div>
            <div>
                <p>BIO:</p>
                {{#if Profile.bio}}
                <p>{{Profile.bio}}</p>
                {{else}}
                <p>No bio</p>
                {{/if}}
            </div>
        </div>
        <div>
            {{#each Cuisines}}
                <p>{{name}}</p>
            {{/each}}
        </div>
    </div>
</div>