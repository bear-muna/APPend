<div class="container-fluid signup">
    <div class="d-flex flex-row-reverse">
        <button class="btn" id="back-btn">X</button>
    </div>
    <form class="row form w-100 signup-form">
        <div class="user-picture col-12 col-md-3 h-30">
           <!-- photo upload --> 
        </div>
        <div class="col align-self-center">
            <div class="form-group">
                <label for="username-signup">*Enter username:</label> <br>
                <input class="form-input w-100" type="text" id="username-signup">
            </div>
            <div class="form-group">
                <label for="email-signup">*Enter email:</label> <br>
                <input class="form-input w-100" type="text" id="email-signup">
            </div>
        </div>
        <div class="col align-self-center">
            <div class="form-group">
                <label for="password-signup">*Enter password:</label> <br>
                <input class="form-input w-100" type="text" id="password-signup">
            </div>
            <div class="form-group">
                <label for="location-signup">*Enter location:</label> <br>
                <input class="form-input w-100" type="text" id="location-signup">
            </div>
        </div>

        <div class="row w-100 justify-content-center">
            <div class="col-12 col-md-6 align-self-center">
                <div class="form-group">
                    <label for="first-name-signup">*Enter first name:</label> <br>
                    <input class="form-input w-100" type="text" id="first-name-signup">
                </div>
                <div class="form-group">
                    <label for="last-name-signup">*Enter last name:</label> <br>
                    <input class="form-input w-100" type="text" id="last-name-signup">
                </div>
            </div>
            <div class="form-group col align-self-center">
                <label for="bio-signup">Add Bio:</label> <br>
                <textarea class="form-input w-100 text-wrap" type="text" id="bio-signup" placeholder="Add more about yourself so others can see how cool of a bite buddy you are!" rows="6"></textarea>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-group col-md-6">
                <label for="availability-signup">Add Availability:</label> <br>
                <textarea class="form-input text-wrap w-100" type="text" id="availability-signup" placeholder="Enter some dates or times you're free to get a bite!" rows="5"></textarea>
            </div>
            <div class="form-group col w-100">
                <label for="cuisines-signup">Add your favorite cuisines!</label> <br>
                <select name="cuisine-options form-select" id="cuisines-signup">
                    <option value="American">American</option>
                    <option value="Mexican">Mexican</option>
                    <option value="Indian">Indian</option>
                    <option value="Thai">Thai</option>
                    <option value="Chinese">Chinese</option>
                    <option value="Greek">Greek</option>
                    <option value="Japanese">Japanese</option>
                    <option value="Italian">Italian</option>
                    <option value="Korean">Korean</option>
                    <option value="Dessert">Dessert</option>
                </select>
            </div>
            <div class="col">
                <button class="btn" id="signup" type="submit">Sign up!</button>
            </div>
        </div>
    </form>
</div>

<script src="/js/signup.js"></script>