<div class="container-fluid signup">
    <div class="d-flex flex-row-reverse">
        <button class="btn" id="back-btn">X</button>
    </div>
    <form class="row form w-100 signup-form">
        <div class="col-12 col-lg-4">
            <!-- photo upload --> 
            <div class="pic-wrapper">
                <div class="user-picture">
                <button id="upload_widget" type="button" class="cloudinary-button">Upload Picture</button>
                </div>
            </div>
        </div>
        <div class="col-lg-4 align-self-center">
            <div class="form-group">
                <label for="username-signup" class="signup-label">*Enter username:</label> <br>
                <input class="form-input w-100" type="text" id="username-signup">
            </div>
            <div class="form-group">
                <label for="email-signup" class="signup-label">*Enter email:</label> <br>
                <input class="form-input w-100" type="text" id="email-signup">
            </div>
        </div>
        <div class="col-lg-4 align-self-center">
            <div class="form-group">
                <label for="password-signup" class="signup-label">*Enter password:</label> <br>
                <input class="form-input w-100" type="text" id="password-signup">
            </div>
            <div class="form-group">
                <label for="location-signup" class="signup-label">*Enter location:</label> <br>
                <input class="form-input w-100" type="text" id="location-signup">
            </div>
        </div>

        <div class="row w-100 justify-content-center">
            <div class="col-12 col-lg-6 align-self-center">
                <div class="form-group">
                    <label for="first-name-signup" class="signup-label">*Enter first name:</label> <br>
                    <input class="form-input w-100" type="text" id="first-name-signup">
                </div>
                <div class="form-group">
                    <label for="last-name-signup" class="signup-label">*Enter last name:</label> <br>
                    <input class="form-input w-100" type="text" id="last-name-signup">
                </div>
            </div>
            <div class="form-group col-lg-6 align-self-center">
                <label for="bio-signup" class="signup-label">Add Bio:</label> <br>
                <textarea class="form-input w-100 text-wrap" type="text" id="bio-signup" placeholder="Add more about yourself so others can see how cool of a bite buddy you are!" rows="6"></textarea>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-group col-lg-6">
                <label for="availability-signup" class="signup-label">Add Availability:</label> <br>
                <textarea class="form-input text-wrap w-100" type="text" id="availability-signup" placeholder="Enter some dates or times you're free to get a bite!" rows="5"></textarea>
            </div>
            <div class="form-group col w-100 cuisine-favs container p-3">
                <label for="cuisines-signup" class="signup-label">Add your favorite cuisines!</label> <br>
                <div class="row checkbox-section">
                    {{#each cuisine}}
                    <div class="form-check col-6 col-md-4 col-lg-3 d-flex align-items-center">
                        <label for="option" class="form-check-label d-flex justify-content-center">
                            <input class="form-check-input"  type="checkbox" value="{{name}}" data-cuisine-id="{{id}}">{{name}}</input>
                        </label>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div> 
        <div class="d-flex justify-content-center">
            <button class="btn signup-btn" id="signup" type="submit">Sign up!</button>
        </div>
    </form>
</div>



<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  
<script src="/js/signup.js"></script>