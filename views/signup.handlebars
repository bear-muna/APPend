<div class="container-fluid signup">
    <div class="d-flex flex-row-reverse">
        <button class="btn" id="back-btn">X</button>
    </div>
    <form class="row form w-100 signup-form">
        <div class="user-picture col-12 col-md-3 h-30">
           <!-- photo upload --> 
        </div>
        <div class="col align-self-center">
            <div class="form-group">
                <label for="username-signup">*Enter username:</label> <br>
                <input class="form-input w-100" type="text" id="username-signup">
            </div>
            <div class="form-group">
                <label for="email-signup">*Enter email:</label> <br>
                <input class="form-input w-100" type="text" id="email-signup">
            </div>
        </div>
        <div class="col align-self-center">
            <div class="form-group">
                <label for="password-signup">*Enter password:</label> <br>
                <input class="form-input w-100" type="text" id="password-signup">
            </div>
            <div class="form-group">
                <label for="location-signup">*Enter location:</label> <br>
                <input class="form-input w-100" type="text" id="location-signup">
            </div>
        </div>

        <div class="row w-100 justify-content-center">
            <div class="col-12 col-md-6 align-self-center">
                <div class="form-group">
                    <label for="first-name-signup">*Enter first name:</label> <br>
                    <input class="form-input w-100" type="text" id="first-name-signup">
                </div>
                <div class="form-group">
                    <label for="last-name-signup">*Enter last name:</label> <br>
                    <input class="form-input w-100" type="text" id="last-name-signup">
                </div>
            </div>
            <div class="form-group col align-self-center">
                <label for="bio-signup">Add Bio:</label> <br>
                <textarea class="form-input w-100 text-wrap" type="text" id="bio-signup" placeholder="Add more about yourself so others can see how cool of a bite buddy you are!" rows="6"></textarea>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-group col-md-6">
                <label for="availability-signup">Add Availability:</label> <br>
                <textarea class="form-input text-wrap w-100" type="text" id="availability-signup" placeholder="Enter some dates or times you're free to get a bite!" rows="5"></textarea>
            </div>
            <div class="form-group col w-100 cuisine-favs container">
                <label for="cuisines-signup">Add your favorite cuisines!</label> <br>
                <div class="row">
                    <div class="form-check col-3">
                        <input class="form-check-input" type="checkbox" id="option1" value="American"></input>
                        <label for="option1" class="form-check-label">American</label>
                    </div>
                    <div class="form-check col-3">
                        <input class="form-check-input" type="checkbox" id="option2"></input>
                        <label for="option2" class="form-check-label">Mexican</label>
                    </div>
                    <div class="form-check col-3">
                        <input class="form-check-input" type="checkbox" id="option3"></input>
                        <label for="option3" class="form-check-label">Indian</label>
                    </div>
                    <div class="form-check col-3">
                        <input class="form-check-input" type="checkbox" id="option4"></input>
                        <label for="option4" class="form-check-label">Thai</label>
                    </div>
                    <div class="form-check col-3">
                        <input class="form-check-input" type="checkbox" id="option5"></input>
                        <label for="option5" class="form-check-label">Chinese</label>
                    </div>
                    <div class="form-check col-3">
                        <input class="form-check-input" type="checkbox" id="option6" value="American"></input>
                        <label for="option6" class="form-check-label">Greek</label>
                    </div>
                    <div class="form-check col-3">
                        <input class="form-check-input" type="checkbox" id="option7"></input>
                        <label for="option7" class="form-check-label">Japanese</label>
                    </div>
                    <div class="form-check col-3">
                        <input class="form-check-input" type="checkbox" id="option8"></input>
                        <label for="option8" class="form-check-label">Italian</label>
                    </div>
                    <div class="form-check col-3">
                        <input class="form-check-input" type="checkbox" id="option9"></input>
                        <label for="option9" class="form-check-label">Korean</label>
                    </div>
                    <div class="form-check col-3">
                        <input class="form-check-input" type="checkbox" id="option10"></input>
                        <label for="option10" class="form-check-label">Dessert</label>
                    </div>
                    <div class="form-check col-3">
                        <input class="form-check-input" type="checkbox" id="option11"></input>
                        <label for="option11" class="form-check-label">Pizza</label>
                    </div>
                    <div class="form-check col-3">
                        <input class="form-check-input" type="checkbox" id="option12"></input>
                        <label for="option12" class="form-check-label">Coffee</label>
                    </div>
                </div>
            </div>
            <div class="row w-50 align-items-center">
                <button class="btn align-self-center" id="signup" type="submit">Sign up!</button>
            </div>
        </div>
    </form>
</div>

<script src="/js/signup.js"></script>