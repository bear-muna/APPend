<div class="container-fluid edit">
    <div class="d-flex flex-row-reverse">
        <a href="/dashboard">
        <button class="btn" id="back-btn">X</button>
        </a>
    </div>
    <form class="form w-100 row" id="edit-profile" data-user-id="{{user.id}}" data-profile-picture="{{user.Profile.picture}}">
        <div class="col-12 col-md-4">
            <!-- photo upload --> 
            <div class="pic-wrapper p-2 m-2">
                <button id="upload_widget" type="button" class="cloudinary-button"><img src={{user.Profile.picture}} class="dashboard-photo d-flex justify-content-center" alt="profile-pic">Change Picture</button>
            </div>
        </div>
        <div class="col-lg-4 align-self-center">
            <div class="form-group">
                <label for="username-edit" class="edit-label">Edit username:</label> <br>
                <input class="form-input w-100" type="text" value="{{user.username}}" id="username-edit">
            </div>
            <div class="form-group">
                <label for="email-edit" class="edit-label">Edit email:</label> <br>
                <input class="form-input w-100" type="text" value="{{user.email}}" id="email-edit">
            </div>
        </div>
        <div class="col-lg-4 align-self-center">
            <div class="form-group">
                <label for="password-edit" class="edit-label">Edit password:</label> <br>
                {{!-- isn't this password encrypted? Don't know how to grab the unencrypted password --}}
                <input class="form-input w-100" type="text" id="password-edit">
            </div>
            <div class="form-group">
                <label for="location-edit" class="edit-label">Edit location:</label> <br>
                <input class="form-input w-100" type="text" value="{{user.Profile.location}}" id="location-edit">
            </div>
        </div>
        <div class="row w-100 justify-content-center">
            <div class="col-12 col-lg-6 align-self-center">
                <div class="form-group">
                    <label for="first-name-edit" class="edit-label">Edit first name:</label> <br>
                    <input class="form-input w-100" type="text" value="{{user.first_name}}" id="first-name-edit">
                </div>
                <div class="form-group">
                    <label for="last-name-edit" class="edit-label">Edit last name:</label> <br>
                    <input class="form-input w-100" type="text" value="{{user.last_name}}" id="last-name-edit">
                </div>
            </div>
            <div class="form-group col-lg-6 align-self-center">
                <label for="bio-edit" class="edit-label">Edit Bio:</label> <br>
                <textarea class="form-input w-100" type="text" value="{{user.Profile.bio}}" id="bio-edit" placeholder="Add more about yourself so others can see how cool of a bite buddy you are!" rows="6">{{user.Profile.bio}}</textarea>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-group col-lg-6">
                <label for="availability-edit" class="edit-label">Edit Availability:</label> <br>
                <textarea class="form-input w-100" type="text" value="{{user.Profile.availability}}" id="availability-edit" placeholder="Enter some dates or times you're free to get a bite!" rows="5">{{user.Profile.availability}}</textarea>
            </div>
            <div class="form-group col w-100 cuisine-favs container p-3">
                <label for="cuisines-edit" class="edit-label">Edit your favorite cuisines!</label> <br>
                <div class="row checkbox-section">
                    {{#each user.Cuisines as |u|}}
                        <div class="form-check col-6 col-md-4 col-lg-3 d-flex align-items-center">
                            <label for="option" class="form-check-label d-flex justify-content-center">
                                <input class="form-check-input" type="checkbox" value="{{name}}" data-cuisine-id="{{id}}" checked>{{name}}</input>
                            </label>
                        </div>
                    {{/each}}
                    {{#each cuisine as |c|}}
                        <div class="form-check col-6 col-md-4 col-lg-3 d-flex align-items-center">
                            <label for="option" class="form-check-label d-flex justify-content-center">
                                <input class="form-check-input" type="checkbox" value="{{name}}" data-cuisine-id="{{id}}">{{name}}</input>
                            </label>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn edit-btn" id="edit" type="submit">Edit</button>
        </div>
    </form>
</div>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  
<script src="/js/edit.js"></script>