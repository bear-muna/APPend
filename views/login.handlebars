<div class="row justify-content-center">
<div class="w-75 login-form">
    <div class="d-flex flex-row-reverse">
        <button class="btn" id="back-btn">X</button>
    </div>
    <form class="form">
        <div class="form-group">
            <label for="username-login">Enter your username:</label> <br>
            <input class="form-input w-100" type="text" id="username-login"/>
        </div>
        <div class="form-group">
            <label for="password-login">Enter your password:</label> <br>
            <input class="form-input w-100" type="password" id="password-login"/>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn login-btn" id="login" type="submit">Log in!</button>
        </div>
    </form>
</div>
</div>

